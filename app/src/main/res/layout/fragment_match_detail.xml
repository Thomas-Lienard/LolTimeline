<!-- Master layout. -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

              <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:minWidth="56dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/match_detail_champ_icon"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

            <TextView
                android:fontFamily="sans-serif-condensed"
                android:id="@+id/text_lvl"
                android:layout_height="wrap_content"
                android:minWidth="120dp"
                android:layout_width="wrap_content"
                android:textSize="24sp" />

            <TextView
                android:fontFamily="sans-serif-condensed"
                android:id="@+id/text_kda"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/grey_700"
                android:textSize="20sp" />

        </LinearLayout>

        <!-- Main content: high, low, art, weather state -->
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/spell1_icon"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

            <ImageView
                android:id="@+id/spell2_icon"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

            <TextView
                android:fontFamily="sans-serif-light"
                android:id="@+id/text_farm"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="96sp" />

            <TextView
                android:id="@+id/text_gold"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:textColor="@color/grey_700"
                android:textSize="48sp" />


        </LinearLayout>

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:fontFamily="sans-serif-condensed"
                android:id="@+id/text_wards"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/grey_700"
                android:textAppearance="?android:textAppearanceLarge" />

            <TextView
                android:fontFamily="sans-serif-condensed"
                android:id="@+id/text_damage_dealt"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/grey_700"
                android:textAppearance="?android:textAppearanceLarge" />


            <TextView
                android:fontFamily="sans-serif-condensed"
                android:id="@+id/text_damage_taken"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/grey_700"
                android:textAppearance="?android:textAppearanceLarge" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/abc_action_bar_icon_vertical_padding"
            android:layout_height="@dimen/abc_action_bar_progress_bar_size">

            <ImageView
                android:id="@+id/item0_icon"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

            <ImageView
                android:id="@+id/item1_icon"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

            <ImageView
                android:id="@+id/item2_icon"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

            <ImageView
                android:id="@+id/item3_icon"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

            <ImageView
                android:id="@+id/item4_icon"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

            <ImageView
                android:id="@+id/item5_icon"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

            <ImageView
                android:id="@+id/item6_icon"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />


        </LinearLayout>
    </LinearLayout>
</ScrollView>